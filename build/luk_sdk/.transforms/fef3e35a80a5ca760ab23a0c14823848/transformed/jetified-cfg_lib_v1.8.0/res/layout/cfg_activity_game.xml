<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cfg_act_game_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/cfTouch"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top">

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/cfGameContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <com.cftech.gamelibrary.view.webview.CFGWebView
            android:id="@+id/cfWvGameContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/cfIvCloseGameWindow"
            android:layout_width="35.5dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="13dp"
            android:scaleType="fitXY"
            android:src="@drawable/cf_ic_close_game_window"
            android:visibility="gone" />
    </RelativeLayout>

</FrameLayout>